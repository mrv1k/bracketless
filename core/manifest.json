{
  "name": "Bracketless",
  "version": "0.7",
  "description": "Hide or display text between brackets",
  "homepage_url": "https://github.com/mrv1k/bracketless#readme",
  "author": "Viktor Khotimchenko",
  "icons": {
    "16": "icons/bracketless16.png",
    "48": "icons/bracketless48.png",
    "128": "icons/bracketless128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "optional_permissions": [
    "tabs",
    "webNavigation",
    "*://*/"
  ],
  "background": {
    "scripts": [
      "src/bg/eventPage.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/bracketless16.png",
      "32": "icons/bracketless32.png"
    },
    "default_title": "Bracketless: load for current page"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "chrome_style": true
  },
  "manifest_version": 2
}
